@model ExemploEF.Models.Cliente

@{
    ViewData["Title"] = "Excluir Cliente";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-danger">
                <div class="card-header bg-danger text-white">
                    <h3 class="mb-0">⚠️ Excluir Cliente</h3>
                </div>
                <div class="card-body">
                    <p class="text-danger fw-bold">Tem certeza de que deseja excluir este cliente? Esta ação não pode ser desfeita.</p>
                    <dl class="row">
                        <dt class="col-sm-4 fw-bold">@Html.DisplayNameFor(model => model.Nome)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Nome)</dd>

                        <dt class="col-sm-4 fw-bold">@Html.DisplayNameFor(model => model.Nascimento)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Nascimento)</dd>
                    </dl>
                </div>
                <div class="card-footer text-center">
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="ClienteId" />
                        <button type="submit" class="btn btn-danger">Sim, excluir</button>
                        <a asp-action="Index" class="btn btn-outline-secondary">Cancelar</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
