@model ExemploEF.Models.Cliente

@{
    ViewData["Title"] = "Detalhes do Cliente";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">Detalhes do Cliente</h3>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4 fw-bold">@Html.DisplayNameFor(model => model.Nome)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Nome)</dd>

                        <dt class="col-sm-4 fw-bold">@Html.DisplayNameFor(model => model.Nascimento)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Nascimento)</dd>
                    </dl>
                </div>
                <div class="card-footer text-center">
                    <a asp-action="Edit" asp-route-id="@Model?.ClienteId" class="btn btn-warning">Editar</a>
                    <a asp-action="Index" class="btn btn-outline-secondary">Voltar para a Lista</a>
                </div>
            </div>
        </div>
    </div>
</div>
