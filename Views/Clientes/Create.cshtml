@model ExemploEF.Models.Cliente

@{
    ViewData["Title"] = "Criar Cliente";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">🆕 Criar Novo Cliente</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger d-none"></div>

                        <div class="mb-3">
                            <label asp-for="Nome" class="form-label fw-bold">Nome</label>
                            <input asp-for="Nome" class="form-control" placeholder="Digite o nome do cliente" />
                            <span asp-validation-for="Nome" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Nascimento" class="form-label fw-bold">Data de Nascimento</label>
                            <input asp-for="Nascimento" type="date" class="form-control" />
                            <span asp-validation-for="Nascimento" class="text-danger"></span>
                        </div>

                        <div class="text-center">
                            <button type="submit" class="btn btn-success">✅ Criar</button>
                            <a asp-action="Index" class="btn btn-outline-secondary">❌ Cancelar</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
