@model ExemploEF.Models.Categoria

@{
    ViewData["Title"] = "Details";
}

<div class="container mt-4">
    <div class="card shadow-lg p-4">
        <h1 class="text-primary">Detalhes da Categoria</h1>
        <hr />
        <div class="row">
            <div class="col-md-8">
                <dl class="row">
                    <dt class="col-sm-3 font-weight-bold">
                        @Html.DisplayNameFor(model => model.Nome)
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.Nome)
                    </dd>
                </dl>
            </div>
        </div>
        <div class="mt-4">
            <a asp-action="Edit" asp-route-id="@Model.CategoriaId" class="btn btn-primary me-2">Editar</a>
            <a asp-action="Index" class="btn btn-secondary">Voltar para a Lista</a>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
