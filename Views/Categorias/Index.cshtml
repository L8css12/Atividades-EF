@model IEnumerable<ExemploEF.Models.Categoria>

@{
    ViewData["Title"] = "Index";
}

<div class="container mt-4">
    <h2 class="text-center">Lista de Categorias</h2>
    <p class="text-center text-muted">Gerencie as categorias cadastradas no sistema.</p>

    <div class="d-flex justify-content-end">
        <a asp-action="Create" class="btn btn-success mb-3">Criar Nova Categoria</a>
    </div>

    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model.Nome)</th>
                <th class="text-center">Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Nome)</td>
                    <td class="text-center">
                        <a asp-action="Edit" asp-route-id="@item.CategoriaId" class="btn btn-primary btn-sm">Editar</a>
                        <a asp-action="Details" asp-route-id="@item.CategoriaId" class="btn btn-secondary btn-sm">Detalhes</a>
                        <a asp-action="Delete" asp-route-id="@item.CategoriaId" class="btn btn-danger btn-sm">Excluir</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
